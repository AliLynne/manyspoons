<div class="row">
  <div class="col">
  </div>
  <div class="box col align-self-center">
    <h2>Your Lists</h2>
    <ul>
      <% @lists.each do |list| %>
          <li><%= link_to list.title, list %></li>
          <li><%= link_to 'Edit', edit_list_path(list) %></li>
          <li><%= link_to 'Delete', list, method: :delete, data: { confirm: 'Are you sure?' } %></li>
          <br />
      <% end %>
    </ul>

  <%= link_to 'New List', new_list_path %>
  </div>
  <div class="col">
  </div>
</div>
